{
  "info": {
    "name": "Roomify API",
    "description": "Conference Room Booking System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login as User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@roomify.com\",\n  \"password\": \"user123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Login as Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@roomify.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Register New User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Smith\",\n  \"email\": \"jane@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Rooms",
      "item": [
        {
          "name": "Get All Rooms",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/rooms",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "rooms"]
            }
          }
        },
        {
          "name": "Create Room (Admin Only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Executive Suite\",\n  \"location\": \"Floor 5\",\n  \"capacity\": 15\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/rooms",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "rooms"]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Get Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/bookings",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "bookings"]
            }
          }
        },
        {
          "name": "Create Booking (User Only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"roomId\": \"REPLACE_WITH_ROOM_ID\",\n  \"start\": \"2024-12-01T10:00:00\",\n  \"end\": \"2024-12-01T11:00:00\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/bookings",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "bookings"]
            }
          }
        },
        {
          "name": "Approve Booking (Admin Only)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/bookings/BOOKING_ID/approve",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "bookings", "BOOKING_ID", "approve"]
            }
          }
        },
        {
          "name": "Reject Booking (Admin Only)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/bookings/BOOKING_ID/reject",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "bookings", "BOOKING_ID", "reject"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": "YOUR_JWT_TOKEN_HERE"
    }
  ]
}
